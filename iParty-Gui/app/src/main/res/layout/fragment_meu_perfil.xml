<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.playjoa.telasiparty.minhaConta"
    android:background="#dedcdf">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginTop="20dp">


        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <EditText
            android:id="@+id/txtnomep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Century Gothic"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtusuariop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Century Gothic"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtemailp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Century Gothic"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtsenhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="Century Gothic"
            android:inputType="textPassword"
            android:ems="10" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#3b5998"
            android:text="Conectar com Facebook"
            android:textColor="#ffffff"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1">


            <Button
                android:id="@+id/btnMeuseventos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="#3c4045"
                android:text="Meus Eventos"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btnMeusair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:background="#3c4045"
                android:text="Logout"
                android:textColor="#FFF" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
